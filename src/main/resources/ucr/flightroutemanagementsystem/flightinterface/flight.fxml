<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="1023.0" prefWidth="1298.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.flightcontroller.FlightController">

    <!-- Top: Encabezado -->
    <top>
        <Label alignment="CENTER" maxWidth="Infinity" style="-fx-background-color: #7e57c2; -fx-text-fill: white;                       -fx-font-size: 28px; -fx-padding: 20px; -fx-font-weight: bold;" text="✈️ Sistema de Gestión de Vuelos" BorderPane.alignment="CENTER" />
    </top>

    <!-- Formulario de Vuelos -->
    <left>
        <VBox prefHeight="540.0" prefWidth="224.0" spacing="15" style="-fx-padding: 25px;">
            <Label style="-fx-font-size: 20px; -fx-text-fill: #512da8; -fx-font-weight: bold;" text="Registro de Vuelo" />
            <Label text="Número de vuelo:" />
            <TextField fx:id="flightNumberField" promptText="Ej: 101" style="-fx-background-radius: 8;" />
            <Label text="Origen:" />
            <TextField fx:id="originField" promptText="Ej: San José" style="-fx-background-radius: 8;" />
            <Label text="Destino:" />
            <TextField fx:id="destinationField" promptText="Ej: Toronto" style="-fx-background-radius: 8;" />
            <Label text="Capacidad:" />
            <TextField fx:id="capacityField" promptText="Ej: 100" style="-fx-background-radius: 8;" />
            <Label text="Fecha de salida:" />
            <DatePicker fx:id="departureDatePicker" style="-fx-background-radius: 8;" />
            <Label text="Hora de salida (HH:mm):" />
            <TextField fx:id="departureTimeField" promptText="HH:mm" style="-fx-background-radius: 8;" />

            <Button fx:id="registerFlightButton" maxWidth="Infinity" onAction="#handleRegisterFlight" style="-fx-background-color: #6a1b9a; -fx-text-fill: white;                            -fx-font-weight: bold; -fx-background-radius: 10;" text="Registrar Vuelo" />
        </VBox>
    </left>

    <!-- Formulario de Pasajeros -->
    <right>
        <VBox prefHeight="571.0" prefWidth="335.0" spacing="15" style="-fx-padding: 25px;">
            <Label style="-fx-font-size: 20px; -fx-text-fill: #512da8; -fx-font-weight: bold;" text="Registro de Pasajero" />
            <Label text="ID:" />
            <TextField fx:id="passengerIdField" promptText="Ej: 305630386" style="-fx-background-radius: 8;" />
            <Label text="Nombre:" />
            <TextField fx:id="passengerNameField" promptText="Ej: María" style="-fx-background-radius: 8;" />
            <Label text="Nacionalidad:" />
            <TextField fx:id="nationalityField" prefHeight="25.0" prefWidth="245.0" promptText="Ej: Costarricense" style="-fx-background-radius: 8;" />
            <Label text="Vuelo asignado:" />
            <ComboBox fx:id="assignedFlightComboBox" prefWidth="150.0" style="-fx-background-radius: 8;" />
         <Pane prefHeight="68.0" prefWidth="285.0">
            <children>
      
                  <Button fx:id="registerPassengerButton" layoutY="2.0" maxWidth="Infinity" onAction="#handleRegisterPassenger" prefHeight="25.0" prefWidth="154.0" style="-fx-background-color: #9575cd; -fx-text-fill: white;                            -fx-font-weight: bold; -fx-background-radius: 10;" text="Registrar Pasajero" />
               <Button layoutY="34.0" maxWidth="Infinity" onAction="#handleAssignedFlightToExistingPassenger" prefHeight="25.0" prefWidth="278.0" style="-fx-background-color: #9575cd; -fx-text-fill: white;                            -fx-font-weight: bold; -fx-background-radius: 10;" text="Asignar vuelo a pasajero ya registrado" />
            </children>
         </Pane>
        </VBox>
    </right>

    <!-- Tabla central -->
    <center>
        <VBox prefHeight="571.0" prefWidth="804.0" spacing="10" style="-fx-padding: 25px;">
            <Label style="-fx-font-size: 20px; -fx-text-fill: #512da8; -fx-font-weight: bold;" text="Vuelos Registrados" />
            <TableView fx:id="flightTable" prefHeight="400" prefWidth="667.0">
                <columns>
                    <TableColumn fx:id="flightTableNumberColumn" prefWidth="64.0" text="N°" />
                    <TableColumn fx:id="flightTableOriginColumn" prefWidth="86.0" text="Origen" />
                    <TableColumn fx:id="flightTableDestinationColumn" prefWidth="100" text="Destino" />
                    <TableColumn fx:id="flightTableDepartureTimeColumn" prefWidth="150" text="Fecha/Hora" />
                    <TableColumn fx:id="flightTableCapacityColumn" prefWidth="87.0" text="Capacidad" />
                    <TableColumn fx:id="flightTableOccupancyColumn" prefWidth="73.0" text="Ocupación" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom: Tabla de Pasajeros Registrados -->
    <bottom>
        <VBox prefWidth="1185.0" spacing="10" style="-fx-padding: 20px;">
         <Pane prefHeight="72.0" prefWidth="1258.0">
            <children>
                  <Label layoutX="6.0" layoutY="-1.0" style="-fx-font-size: 20px; -fx-text-fill: #512da8; -fx-font-weight: bold;" text="Pasajeros Registrados" />
               <TextField fx:id="searchPassengerTf" layoutX="155.0" layoutY="36.0" prefHeight="25.0" prefWidth="111.0" />
               <Label layoutX="14.0" layoutY="37.0" prefHeight="23.0" prefWidth="141.0" text="search passanger by id" />
            </children>
         </Pane>
            <TableView fx:id="passengerTable" prefHeight="250">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="60" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="120" text="Nombre" />
                    <TableColumn fx:id="nationalityColumn" prefWidth="120" text="Nacionalidad" />
                    <TableColumn fx:id="flightColumn" prefWidth="120" text="Vuelo Asignado" />
               <TableColumn fx:id="flightHistoryColumn" prefWidth="724.0" text="Historial de vuelos" />
                </columns>
            </TableView>
        </VBox>
    </bottom>

</BorderPane>
